<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".MainActivity">


    <!-- SCROLLVIEW PARA DESPLAZAR LA PANTALLA PARA ABAJO -->
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/imageView2"
                android:layout_marginTop="20sp"
                android:layout_width="250sp"
                android:layout_height="15sp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/logo"
                android:contentDescription="@string/foto" />



            <!-- TÍTULO DEL FORMULARIO -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/texto"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/tittle"
                android:textSize="25sp" />







            <!-- INPUT TELÉFONO -->
            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:textColor="@color/texto"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="15dp"
                android:text="@string/phone" />

            <EditText
                android:id="@+id/editPhone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:autofillHints=""
                android:textColor="@color/texto"
                android:ems="10"
                android:inputType="phone"
                android:maxLength="9"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.39"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editDireccion"
                app:layout_constraintVertical_bias="0.047"
                tools:ignore="LabelFor" />


            <!-- INPUT NOMBRE -->
            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/texto"
                android:layout_marginStart="15sp"
                android:layout_marginTop="15dp"
                android:text="@string/name" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/texto"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.39"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.07"
                tools:ignore="LabelFor" />


            <!-- INPUT APELLIDO -->
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/texto"
                android:layout_marginStart="15sp"
                android:layout_marginTop="15dp"
                android:text="@string/surname" />

            <EditText
                android:id="@+id/editSurName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:autofillHints=""
                android:ems="10"
                android:textColor="@color/texto"
                android:inputType="textPersonName"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.39"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editName"
                app:layout_constraintVertical_bias="0.022"
                tools:ignore="LabelFor" />


            <!-- INPUT DIRECCIÓN -->
            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:textColor="@color/texto"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="15dp"
                android:text="@string/address" />

            <EditText
                android:id="@+id/editDireccion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/texto"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.39"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editEmail"
                app:layout_constraintVertical_bias="0.043"
                tools:ignore="LabelFor" />


            <!-- INPUT EMAIL -->
            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:textColor="@color/texto"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="15dp"
                android:text="@string/email" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:textColor="@color/texto"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.39"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editSurName"
                app:layout_constraintVertical_bias="0.039"
                tools:ignore="LabelFor" />


            <!-- OPCIÓN ESCOGIDA -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/texto"
                android:text="@string/opcion_elegida"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.065"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editPhone"
                app:layout_constraintVertical_bias="0.065" />


            <!-- INPUT NOTA -->

            <TextView
                android:id="@+id/opcion"
                android:textColor="@color/texto"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:textSize="20sp"
                android:gravity="start"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:textColor="@color/texto"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="15dp"
                android:text="@string/note" />


            <!-- BOTÓN ENVIAR-->
            <EditText
                android:id="@+id/etComments"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:textColor="@color/texto"
                android:layout_gravity="start"
                android:autofillHints=""
                android:gravity="top"
                android:inputType="text|textMultiLine"
                app:layout_constraintBottom_toBottomOf="@+id/btnenviar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/opcion"
                app:layout_constraintVertical_bias="0.141"
                tools:ignore="LabelFor" />

            <Button
                android:id="@+id/btnenviar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:background="@color/colorAccent"
                android:text="@string/enviar"
                android:textColor="@color/Fondo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="25sp"
                app:layout_constraintTop_toBottomOf="@+id/etComments" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/fondo"
                android:layout_gravity="center"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/navigation_correo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_marginStart="15sp"
                    tools:ignore="InOrMmUsage"
                    app:cardBackgroundColor="@color/fondo">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/foto"
                            app:srcCompat="@drawable/correo" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="155dp"
                            android:layout_height="50dp"
                            android:textColor="@color/texto"
                            android:layout_gravity="start"
                            android:gravity="center|start"
                            android:text="@string/email" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/navigation_telefonoMovil"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    tools:ignore="InOrMmUsage"
                    app:cardBackgroundColor="@color/fondo">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/foto"
                            app:srcCompat="@drawable/telefono" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/texto"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/phone" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/navigation_telefonoFijo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginEnd="15sp"
                    tools:ignore="InOrMmUsage"
                    app:cardBackgroundColor="@color/fondo">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="25sp"
                            android:layout_height="50sp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/foto"
                            app:srcCompat="@drawable/telefono_fijo" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:textColor="@color/texto"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/telFijo" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </com.google.android.material.bottomnavigation.BottomNavigationView>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>