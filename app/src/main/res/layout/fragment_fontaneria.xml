                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="57dp"
                                android:fontFamily="@font/roboto_bold"
                                android:text="@string/botonFont1"
                                android:id="@+id/font1Text"
                                android:textColor="@color/LetraFontaneria"
                                android:textSize="22dp" />

                            <TextView
                                android:layout_width="199dp"
                                android:layout_height="81dp"
                                android:text="Contamos con la profesionalidad de más de 70 años de experiencia ¡Consúltanos! Los mejores materiales." />


                            <LinearLayout
