                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- QUINTA TAREA -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                android:onClick="Botones"
                android:id="@+id/pint5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
